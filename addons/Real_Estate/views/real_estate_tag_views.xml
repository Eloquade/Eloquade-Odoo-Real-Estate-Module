<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <!-- list View -->
    <record id="view_real_estate_tag_list" model="ir.ui.view">
        <field name="name">real.estate.tag.list</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <list string="Real Estate Tags">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_real_estate_tag_form" model="ir.ui.view">
        <field name="name">real.estate.tag.form</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <form string="Real Estate Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_real_estate_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">real.estate.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_real_estate_root" name="Real Estate"/>
    <menuitem id="menu_real_estate_tags" name="Tags" parent="menu_real_estate" action="action_real_estate_tag"/>
</odoo>
