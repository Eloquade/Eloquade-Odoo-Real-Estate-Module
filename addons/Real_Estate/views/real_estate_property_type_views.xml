<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_real_estate_property_type_list" model="ir.ui.view">
        <field name="name">real.estate.property.type.list</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_real_estate_property_type_form" model="ir.ui.view">
        <field name="name">real.estate.property.type.form</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div style="text-align: center;">
                        <button name="action_open_properties" type="object" string="View Properties" class="oe_stat_button" icon="fa-list">
                            <field name="property_count" widget="line_count"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_real_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">real.estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_real_estate_root" name="Real Estate"/>
    <menuitem id="menu_real_estate_property_type" name="Property Types"
              parent="menu_real_estate" action="action_real_estate_property_type"/>
</odoo>
