<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_real_estate_form" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">real.estate</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            
            <form string="Real Estate">
                <header>
                    <button string="Mark as Sold" type="object" name="action_mark_sold" />
                    <button string="Mark as Cancelled" type="object" name="action_mark_cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,accepted,sold,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_type_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <!-- General Information -->
                        <page string="General Information">
                            <group>
                                <field name="selling_price"/>
                                <field name="state"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                                <field name="garden_area"/>
                                <field name="bedrooms"/>
                                <field name="bathrooms"/>
                                <field name="area"/>
                                <field name="date_available"/>
                            </group>
                        </page>

                        <!-- Description -->
                        <page string="Description">
                            <group>
                                <field name="description" placeholder="Enter property details..."/>
                            </group>
                        </page>

                        <!-- Location -->
                        <page string="Location">
                            <group>
                                <field name="address"/>
                            </group>
                        </page>
                        <!-- Offers -->
                        <page string="Offers">
                            <field name="offer_ids">
                                <list decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                    <field name="partner_id"/>
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button icon="fa-check" name="action_accept" type="object"/>
                                    <button icon="fa-times" name="action_refuse" type="object"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_real_estate_search" model="ir.ui.view">
        <field name="name">real.estate.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search string="Real Estate Search">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="tag_ids"/>
                <filter string="Available" name="available" domain="[('state', '=', 'new')]"/>
                <filter string="Sold" name="sold" domain="[('state', '=', 'sold')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
            </search>
        </field>
    </record>

    <!-- list View -->
    <record id="view_real_estate_list" model="ir.ui.view">
        <field name="name">real.estate.list</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <list string="Real Estate Properties">
                <field name="name"/>
                <field name="price"/>
                <field name="bedrooms"/>
                <field name="bathrooms"/>
                <field name="area"/>
                <field name="state"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_real_estate" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">list,form</field>
        <field name="context" > {'search_default_available': True} </field>    
    </record>

    <!-- Menu -->
    <menuitem id="menu_real_estate_root" name="Real Estate"/>
    <menuitem id="menu_real_estate" name="Properties" parent="menu_real_estate_root" action="action_real_estate"/>
</odoo>
